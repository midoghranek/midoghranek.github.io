<?xml version="1.0" encoding="UTF-8" ?>
<Module>

<ModulePrefs title="Facebook Like Box" author="Mohamed Abo El-Ghranek" description="Get your facebook page on blogger" author_email="mido.ghranek@yahoo.com" thumbnail="" screenshot="" author_location="Egypt"/>
	
  <UserPref name="url" display_name="Facebook Page URL" required="true" />
  <UserPref name="style" display_name="Widget style" default_value="light" datatype="enum" >
    <EnumValue value="light" />
    <EnumValue value="dark" />
  </UserPref> 
<UserPref name="height" display_name="Box Height" default_value="280" />
	
<Content type="html">	
  <![CDATA[
  
  	   <div id="like_box"></div>

  <script type="text/javascript">
var prefs = new gadgets.Prefs();
var element = document.getElementById('like_box');
var url = prefs.getString("url");
var style = prefs.getString("style");
var height = prefs.getString("height");
var html = '';

html += '<iframe allowtransparency="true" frameborder="0" scrolling="no" src="//www.facebook.com/plugins/likebox.php?href=' + url + '&width=340px&height=' + height + 'px&colorscheme=' + style + '&show_faces=true&header=false&stream=false&show_border=false&appId=492409184153294" style="border:none; overflow:hidden; width:100%; height:' + height + 'px;"></iframe>';

element.innerHTML = html;

   </script>

  ]]>
  </Content>
</Module>